<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="at.itb13.oculus.presentation.NavigationViewController">
	<children>
		<HBox alignment="CENTER_LEFT" focusTraversable="true" spacing="5.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0">
			<children>
				<Button alignment="CENTER" contentDisplay="CENTER"
					mnemonicParsing="false" onAction="#openTreatmentMainView">
					<graphic>
						<ImageView fitHeight="27.0" fitWidth="27.0">
							<image>
								<Image url="@../../../../../res/eye.png" />
							</image>
						</ImageView>
					</graphic>
					<font>
						<Font size="18.0" />
					</font>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Button>
				<Button mnemonicParsing="false" onAction="#openCalendarMainView">
					<graphic>
						<ImageView fitHeight="27.0" fitWidth="27.0"
							onDragDetected="#openCalendarMainView">
							<image>
								<Image url="@../../../../../res/calendar.png" />
							</image>
						</ImageView>
					</graphic>
					<font>
						<Font size="18.0" />
					</font>
				</Button>
				<Button mnemonicParsing="false" onAction="#openPatientMainView">
					<graphic>
						<ImageView fitHeight="27.0" fitWidth="27.0">
							<image>
								<Image url="@../../../../../res/patient.png" />
							</image>
						</ImageView>
					</graphic>
					<font>
						<Font size="18.0" />
					</font>
				</Button>
				<!-- TODO adjust logo position -->
				<ImageView fitHeight="27.0" fitWidth="173.0" translateX="50.0">
					<image>
						<Image url="@../../../../../res/oculus_logo_black_transparent.png" />
					</image>
				</ImageView>
			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
	</children>
</AnchorPane>
