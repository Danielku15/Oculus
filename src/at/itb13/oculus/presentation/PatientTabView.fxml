<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox minWidth="520.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.itb13.oculus.presentation.PatientTabViewController">
   <children>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT">
         <items>
            <Button fx:id="_createNewPatientButton" mnemonicParsing="false" onAction="#createNewTab">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="27.0" fitWidth="27.0">
                     <image>
                        <Image url="@../../../../../pic/addUser.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="_searchPatientButton" mnemonicParsing="false" onAction="#searchPatient">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="27.0" fitWidth="27.0">
                     <image>
                        <Image url="@../../../../../pic/search.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <TextField fx:id="_searchInput">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Label fx:id="_searchLabel" text="%search">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </items>
      </ToolBar>
      <TabPane fx:id="_tabPane" stylesheets="/font.css">
        <tabs>
          <Tab fx:id="_newPatient" closable="false" text="%newpatient">
               <content>
                  <fx:include fx:id="_patientView" source="PatientView.fxml" />
               </content>
            </Tab>
        </tabs>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TabPane>
   </children>
</VBox>
