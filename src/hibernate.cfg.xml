		<mapping class="at.itb13.oculus.model.Doctor" />
		<mapping class="at.itb13.oculus.model.Drug" />
		<mapping class="at.itb13.oculus.model.Employee" />
		<mapping class="at.itb13.oculus.model.EyePrescription" />
		<mapping class="at.itb13.oculus.model.Measurements" />
		<mapping class="at.itb13.oculus.model.Orthoptist" />
		<mapping class="at.itb13.oculus.model.Patient" />
		<mapping class="at.itb13.oculus.model.Prescription" />
		<mapping class="at.itb13.oculus.model.PrescriptionEntry" />
		<mapping class="at.itb13.oculus.model.Queue" />
		<mapping class="at.itb13.oculus.model.QueueEntry" />
		<mapping class="at.itb13.oculus.model.Receptionist" />
		<mapping class="at.itb13.oculus.model.Referral" />
		<mapping class="at.itb13.oculus.model.SickNote" />
		<mapping class="at.itb13.oculus.model.User" />
		<mapping class="at.itb13.oculus.model.UserRight" />
		<mapping class="at.itb13.oculus.model.UserRole" />
	</session-factory>
</hibernate-configuration>
